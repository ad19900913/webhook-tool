{
  "server": {
    "port": 3000,
    "host": "0.0.0.0",
    "timeout": 30000,
    "maxBodySize": "100mb"
  },
  "webhook": {
    "maxPayloadSize": "10mb",
    "rateLimit": {
      "windowMs": 900000,
      "max": 50,
      "message": "请求过于频繁，请稍后再试"
    },
    "security": {
      "enableIpWhitelist": true,
      "ipWhitelist": ["127.0.0.1", "::1"],
      "enableSignature": true,
      "signatureSecret": "",
      "enableRateLimit": true
    }
  },
  "logging": {
    "level": "warn",
    "maxSize": "200mb",
    "maxFiles": 10,
    "retentionDays": 90,
    "format": "combined"
  },
  "storage": {
    "type": "file",
    "maxLogs": 100000,
    "cleanupInterval": 86400000
  },
  "monitoring": {
    "enableMetrics": true,
    "metricsPath": "/metrics",
    "healthCheckPath": "/health",
    "enableHealthCheck": true
  },
  "ui": {
    "theme": "auto",
    "language": "zh-CN",
    "pageSize": 100,
    "autoRefresh": true,
    "refreshInterval": 60000
  },
  "export": {
    "maxRecords": 50000,
    "formats": ["json", "csv", "excel"],
    "defaultFormat": "excel"
  },
  "performance": {
    "enableCompression": true,
    "enableCaching": true,
    "cacheTTL": 300000,
    "maxConcurrentRequests": 100
  },
  "security": {
    "enableHSTS": true,
    "enableCSP": true,
    "enableXSSProtection": true,
    "enableFrameDeny": true,
    "enableNoSniff": true
  }
}
